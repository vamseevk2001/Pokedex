<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@color/watersLight"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/background"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:alpha="0.3"
        android:scaleType="fitCenter"
        android:src="@drawable/pokeball_2" />

    <ImageView
            android:id="@+id/pokemon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ash_ketchum_ms023" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:layout_gravity="end"
        app:lottie_rawRes="@raw/pokeball"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />

        <TextView
            android:id="@+id/poke_name"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif"
            android:textFontWeight="1000"
            android:text="name"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/waterDark"
            android:textAlignment="center"
            android:padding="4dp"
            android:fontFamily="sans-serif"
            android:textFontWeight="800"
            android:text="vamsee"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


</com.google.android.material.card.MaterialCardView>

